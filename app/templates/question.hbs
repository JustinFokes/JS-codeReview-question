<div class="questionPage row">
	<div class="col-xs-2">
	</div>

	<div class="col-xs-8">
		
		<h5>Posted by: {{model.author}}</h5>
		<p>{{model.comment}}</p>

		<p class="bodyContent">{{model.response}}</p>
		<hr>
	</div>

	<div class="col-xs-2">
	</div>
</div>
<div class="row">
	<div class="col-xs-1">
	</div>

	<div class="col-xs-5">
		{{new-answer addAnswer2="addAnswer3" question=model}}
	</div>

	<div class="commentDiv col-xs-4">
		{{#each model.answers as |answer|}}
			<hr>
			<div class="indivComment">{{answer.author}} says: {{answer.response}}</div>
			<hr>
		{{/each}}
	</div>

	<div class="col-xs-2">
	</div>

	{{display-favorites}}
</div>


