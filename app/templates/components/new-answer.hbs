<div class="new-msg-form row">
	<div class="col-xs-2">
	</div>
	<form class="col-xs-8">
		<h4>Provide an Answer:</h4>
		<div class="form-group">
			{{input type="text" placeholder="Name" value=author class="name-input form-control"}}
		</div>

		<div class="form-group">
			{{textarea type="textarea" placeholder="Message" value=response class="msg-input form-control"}}
		</div>

		<button {{action 'addAnswer'}} class="submit btn btn-primary">Submit</button>
	</form>
	<div class="col-xs-2">
	</div>
</div>