{{#if updateQuestionForm}}
<h1>Update Question:</h1>
<div>
  <form>
		<div class="form-group">
			{{input type="text" placeholder="Name" value=author class="name-input form-control"}}
		</div>

		<div class="form-group">
			{{textarea type="textarea" placeholder="Question" value=comment class="msg-input form-control"}}
		</div>

		<div class="form-group">
			{{textarea type="textarea" placeholder="Notes" value=notes class="msg-input form-control"}}
		</div>


    <button {{action 'update' question}} class="submit btn btn-primary">Update Question</button>
  </form>
</div>
{{else}}
	<button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}